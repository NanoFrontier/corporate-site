---
interface Props {
  lang?: string;
}

const { lang = "ja" } = Astro.props;

const currentYear = new Date().getFullYear();

const footerContent = {
  ja: {
    company: "会社情報",
    about: "会社概要",
    news: "ニュース",
    recruit: "採用情報",
    contact: "お問い合わせ",
    address: "〒980-0021 宮城県仙台市青葉区中央4丁目4-19アーバンネット仙台中央ビル2Ｆ",
    phone: "",
    email: "corp@nanofrontier.jp",
    copyright: `© ${currentYear} NanoFrontier株式会社. All rights reserved.`
  },
  en: {
    company: "Company",
    about: "About Us",
    news: "News",
    recruit: "Careers",
    contact: "Contact",
    address: "4-4-19 Chuo, Aoba-ku, Sendai, Miyagi 980-0021, Japan Urban Net Sendai Chuo Building 2F",
    phone: "",
    email: "corp@nanofrontier.jp",
    copyright: `© ${currentYear} NanoFrontier Inc. All rights reserved.`
  }
};

const content = footerContent[lang as keyof typeof footerContent];
---

<footer class="bg-gray-900 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="lg:col-span-2">
        <div class="flex items-center mb-4">
          <img src="/favicon.svg" alt="NanoFrontier" class="h-8 w-8 mr-3" />
          <h3 class="text-xl font-bold">NanoFrontier</h3>
        </div>
        <p class="text-gray-300 mb-4 max-w-md">
          {lang === "ja" 
            ? "ナノ粒子化技術を用いて、さまざまな分野の課題解決に取り組んでいます。"
            : "We tackle challenges in various fields using nanoparticle technology."
          }
        </p>
        <div class="space-y-2 text-sm text-gray-400">
          <p>{content.address}</p>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-lg font-semibold mb-4">{content.company}</h4>
        <ul class="space-y-2">
          <li>
            <a href={lang === "ja" ? "/#company" : "/en/#company"} class="text-gray-300 hover:text-white transition-colors">
              {content.about}
            </a>
          </li>
          <li>
            <a href={lang === "ja" ? "/news" : `/en/news`} class="text-gray-300 hover:text-white transition-colors">
              {content.news}
            </a>
          </li>
          <li>
            <a href="https://careers.nanofrontier.jp" target="_blank" rel="noopener noreferrer" class="text-gray-300 hover:text-white transition-colors flex items-center">
              {content.recruit}
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
              </svg>
            </a>
          </li>
          <li>
            <a href={lang === "ja" ? "/#contact" : "/en/#contact"} class="text-gray-300 hover:text-white transition-colors">
              {content.contact}
            </a>
          </li>
        </ul>
      </div>


    </div>

    <!-- Bottom Section -->
    <div class="border-t border-gray-800 mt-8 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-400 text-sm text-center md:text-left">
          {content.copyright}
        </p>
        <div class="flex space-x-6 mt-4 md:mt-0">
          <a href="https://www.linkedin.com/company/nanofrontier/?viewAsMember=true" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-white transition-colors">
            <span class="sr-only">LinkedIn</span>
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.328v15.344C1 18.4 1.595 19 2.328 19h15.34c.734 0 1.332-.6 1.332-1.328V2.328C19 1.581 18.402 1 17.668 1z" clip-rule="evenodd" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
